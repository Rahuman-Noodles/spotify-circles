generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  spotifyId     String         @unique
  name          String
  email         String         @unique
  image         String?
  accessToken   String?
  refreshToken  String?
  createdAt     DateTime       @default(now())
  reactions     Reaction[]
  circleMembers CircleMember[]
  roomMembers   RoomMember[]
  rooms         Room[]
}

model Reaction {
  id         String   @id @default(cuid())
  trackId    String
  trackName  String
  artistName String
  content    String
  emoji      String?
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
}

model Room {
  id         String       @id @default(cuid())
  name       String
  trackId    String?
  trackName  String?
  artistName String?
  albumArt   String?
  isLive     Boolean      @default(true)
  createdAt  DateTime     @default(now())
  host       User         @relation(fields: [hostId], references: [id])
  hostId     String
  members    RoomMember[]
}

model RoomMember {
  id       String   @id @default(cuid())
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  room     Room     @relation(fields: [roomId], references: [id])
  roomId   String
  joinedAt DateTime @default(now())

  @@unique([userId, roomId])
}

model CircleMember {
  id       String @id @default(cuid())
  user     User   @relation(fields: [userId], references: [id])
  userId   String
  friendId String

  @@unique([userId, friendId])
}
